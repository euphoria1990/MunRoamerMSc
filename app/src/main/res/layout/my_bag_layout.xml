<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlueJeans"
    android:orientation="vertical"
    tools:context=".MyBag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/EarthYellow"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_menu"
            android:id="@+id/menu_icon"
            android:paddingLeft="5dp"
            android:onClick="ClickMenu4">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarTitle"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:text="@string/app_name"
            android:textAlignment="center">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/bagMunrosBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/bag_munros"
            android:textColor="@color/black"
            android:backgroundTint="@color/ButtonColour"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/TeaGreen"
        android:layout_margin="10dp"
        android:id="@+id/myBagList">

    </ListView>

</LinearLayout>





</LinearLayout>