<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlueJeans"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".BeforeRoam">

    <TextView
        android:id="@+id/titleWindow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/TeaGreen"
        android:text="@string/beforeRoamTitle"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleWindow"
        android:background="@color/TeaGreen">

        <TextView
            android:id="@+id/messageWindow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/before_roam_text" />
    </ScrollView>


</RelativeLayout>